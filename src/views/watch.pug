extends base.pug

block content
    div#videoContainer(data-id=video._id)
        video(src="/" + video.fileUrl)
        div#videoControls
            button#play Play
            button#mute Mute
            input(type="range", step="0.1", value=0.5, min="0", max="1")#volume
            div
                span#currentTime 00:00:00
                span  / 
                span#totalTime 00:00:00
            div
                input(type="range", step="1", value=0, min="0")#timeline
            div
                button#fullScreenBtn Enter Full Screen

        div.video__data
            h4.video__title=video.title
            p=video.description
            small.video__createdAt=video.createdAt
            small.video__owner Uploaded by 
                a(href=`/users/${video.owner._id}`)=video.owner.name
        
        if String(video.owner._id) === String(loggedInUser._id)
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;
    
    if loggedIn
        div.video__add-comments
            form.video__comment-form#commentForm
                textarea(cols="30", rows="10", placeholder="Write a comment...")
                button Add Comment
    
    div.video__comments
        ul
            each comment in video.comments.reverse()
                li.video__comment
                    i.fas.fa-comment
                    span  #{comment.text}

block scripts
    script(src="/assets/js/videoPlayer.js")
    script(src="/assets/js/commentSection.js")