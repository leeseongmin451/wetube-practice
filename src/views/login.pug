extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Username", name="username", type="text", required)
        input(placeholder="Password", name="password", type="password", required)
        input(type="submit", value="Log In")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=3536776373406f708c2f&allow_signup=false") Continue with Github &rarr;
    hr
    div
        span Don't have an account? 
        a(href="/login") Create now &rarr;
